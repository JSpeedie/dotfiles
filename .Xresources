#define fg #f0f0f0
#define bg #394952

#define black #394952
#define gray #70838c
#define red #99736e
#define green #78a090
#define yellow #bfb7a1
#define blue #7c9fa6
#define magenta #BF9C86
#define cyan #99BFBA
#define white #f0f0f

!! Urxvt configuration
URxvt.scrollBar: false
URxvt.font: xft:Hermit:size=10
URxvt.internalBorder: 8
URxvt.fading: 10

*.foreground:   #f0f0f0
*.background:   #394952
*.cursorColor:  #f0f0f0

!! Terminal colours
!! white, black \e[1;37m \e[1;30m
!! blue, light blue \e[0;34m \e[1;34m
!! green, light green \e[0;32m \e[1;32m
!! cyan, light cyan \e[0;36m \e[1;36m
!! red, light red \e[0;31m \e[1;31m
!! purple, light purple \e[0;35m \e[1;35m
!! brown, yellow \e[0;33m \e[1;33m
!! gray, light gray \e[0;30m \e[0;37m

! black. Second black is gray
*.color0:       #394952
*.color8:       #70838c
! red
*.color1:       #99736e
*.color9:       #99736e
! green
*.color2:       #78a090
*.color10:      #78a090
! yellow
*.color3:       #bfb7a1
*.color11:      #bfb7a1
! blue
*.color4:       #7c9fa6
*.color12:      #7c9fa6
! magenta
*.color5:       #BF9C86
*.color13:      #BF9C86
! cyan
*.color6:       #99BFBA
*.color14:      #99BFBA
! white
*.color7:       #f0f0f0
*.color15:      #f0f0f0
*pointerColorBackground: bg
*pointerColorForeground: fg

!! Rofi configuration
rofi.width: 800
!! Centered
rofi.location: 2
roft.yoffset: 0
roft.xoffset: 0
rofi.opacity: 75
rofi.lines: 12
rofi.font: Hermit 10
rofi.hide-scrollbar: true
rofi.color-enabled: false
rofi.fg: fg
rofi.bg: bg
rofi.fg-active: fg
rofi.fg-urgent: fg
rofi.bg-active: bg
rofi.bg-urgent: bg
rofi.bgalt: bg
rofi.bc: bg
rofi.bw: 4
rofi.hlfg: bg
rofi.hlfg-active: fg
rofi.hlfg-urgent: fg
rofi.hlbg: fg
rofi.hlbg-active: bg
rofi.hlbg-urgent: bg
rofi.separator-style: solid
!! the separator style won't work unless you're on rofi v 0.15.10 or higher
!! you can check your version with "rofi -v"
