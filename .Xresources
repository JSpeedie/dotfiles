! Taiga
! Author: https://github.com/JSpeedie

! Background, Lighter (+4), Medium (+6), Lightest (+10)
#define colour0 #1f1f1f
#define colour1 #292929
#define colour2 #383838
#define colour3 #525252
! Darkest Foreground (-18), Medium (-10), Darker (-6), Foreground
#define colour4 #756c5d
#define colour5 #a39681
#define colour6 #bdae95
#define colour7 #ccbca1
! Red-ish
#define colour8 #ad6549
! Orange
#define colour9 #c2783c
! Yellow
#define colour10 #bd9255
! Lighter Green
#define colour11 #73855c
! Dark Green
#define colour12 #5c6b4b
! Blue-ish
#define colour13 #576b69
! Light Brown
#define colour14 #85673d
! Purple-ish brown
#define colour15 #514039

*.foreground:   colour7
*.background:   colour0
*.cursorColor:  colour7

! Comments below represent the colours that will be used if none were set.
! It is also what most programs will expect. For instance, by default,
! git will use 'color1' for outputting file paths when running 'git status'

! Black
*.color0:       colour0
! Red
*.color1:       colour8
! Green
*.color2:       colour11
! Yellow
*.color3:       colour10
! Blue
*.color4:       colour13
! Purple
*.color5:       colour15
! Cyan
*.color6:       colour14
! Gray
*.color7:       colour4

! Light Black
*.color8:       colour3
! Light Red
*.color9:       colour9
! Light Green
*.color10:      colour12
! Light Yellow
*.color11:      colour1
! Light Blue
*.color12:      colour2
! Light Purple
*.color13:      colour5
! Light Cyan
*.color14:      colour6
! White
*.color15:      colour7

Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

!! Urxvt configuration
URxvt.scrollBar: false
!! URxvt.font: xft:Hermit:size=10
URxvt.font: -*-tamzen-medium-*-*-*-20-*-*-*-*-*-*-*, -wuncon-siji-medium-r-normal--10-100-75-75-c-80-iso10646-1
URxvt.internalBorder: 8
URxvt.fading: 5
!
!! Terminal colours
!! red, light red \e[0;31m \e[1;31m
!! green, light green \e[0;32m \e[1;32m
!! brown, yellow \e[0;33m \e[1;33m
!! blue, light blue \e[0;34m \e[1;34m
!! purple, light purple \e[0;35m \e[1;35m
!! cyan, light cyan \e[0;36m \e[1;36m
!! white, black \e[1;37m \e[1;30m
!! gray, light gray \e[0;30m \e[0;37m

!! Rofi configuration
rofi.width: 800
!! Centered
rofi.location: 2
roft.yoffset: 0
roft.xoffset: 0
rofi.lines: 12
!! rofi.font: Hermit 10
rofi.font: Tamzen 12
rofi.hide-scrollbar: true
rofi.color-enabled: true
!! 					bg					border				separator
rofi.color-window:	argb:BF1f1f1f,		argb:BF1f1f1f,		argb:BF1f1f1f
!! 					bg					fg					bg alt				hl bg		hl fg
rofi.color-normal:	argb:BF1f1f1f,		colour7,				argb:BF1f1f1f,		colour7,		argb:BF1f1f1f
rofi.color-active:	colour7,			argb:BF1f1f1f,			colour7,			colour7,		argb:BF1f1f1f
rofi.color-urgent:	argb:BF1f1f1f,		colour7,				argb:BF1f1f1f,		colour7,		argb:BF1f1f1f
rofi.bw: 4
rofi.separator-style: solid
!! the separator style won't work unless you're on rofi v 0.15.10 or higher
!! you can check your version with "rofi -v"
