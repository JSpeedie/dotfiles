#
# bspwm hotkeys
#

# Exit session
super + alt + Escape
	bspc quit

# Close current node
super + w
	bspc node -c

super + t
	bspc desktop -l next

# Makes all windows the same size
super + b
	bspc desktop -B

# Make current window floating or fullscreen respectively
super + {s,f}
	bspc node -t ~{floating,fullscreen}

# Selects the previously selected window or desktop respectively
super + {grave,Tab}
	bspc {node,desktop} -f last

# Swap the current window to the previously selected window
super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc node -w last.manual

# Swap the current window to the biggest window on the screen
super + m
	bspc node -s biggest

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

# Change where next window will spawn
super + ctrl + {h,j,k,l}
	bspc node -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

# Resize window
super + alt + {h,j,k,l}
	bspc node -e {left -10,down +10,up -10,right +10}

# Rezise windows shrink?
super + alt + shift + {h,j,k,l}
	bspc node -e {right -10,up +10,down -10,left +10}

# Set the splitting ratio of the selected window from 0.1 to 0.9
super + ctrl + {1-9}
	bspc node -r 0.{1-9}

# Specific to your setup, I rebind it so that the first 5 keys are for the second monitor
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# bspwm Extras
#

# Change gap size on the fly
alt + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# Hide all windows (on all desktops)
# no longer exists in new version of bspwm. why
# super + d
    # bspc control --toggle-visibility 

# Tag focused window as sticky (Window stay on that monitor regardless of what workspace you move to) (Middle priority)
super + z
    bspc node -t sticky

# Tag focused window as locked (Prevents closing) (Highest priority)
super + x
    bspc node -t locked

# Tag focused window as private (Tries to maintain its size and position) (Lowest priority)
super + v
    bspc node -t private

#
# wm independent hotkeys
#

# Create terminal emulator
super + Return
	urxvt

# Bring up launcher
super + space
	rofi -show run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Change volume
alt + n
	amixer -M set Master 5%-

alt + m
        amixer -M set Master 5%+

# Change brightness
alt + shift +  n
	xbacklight -time 10 -steps 1 -dec 10

alt + shift +  m
       	xbacklight -time 10 -steps 1 -inc 10

# Lock the system
alt + Escape
	sh ~/scripts/lock.sh

